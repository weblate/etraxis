{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:sonarjs/recommended",
        "plugin:vue/vue3-essential",
        "standard"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "sonarjs",
        "vue"
    ],
    "rules": {
        "arrow-parens": ["error", "always"],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "spaced-comment": ["error", "always", {
            "exceptions": ["-"]
        }],
        "switch-colon-spacing": ["error"],
        "vue/multi-word-component-names": ["error", {
            "ignores": [
                "column",
                "datatable",
                "dropdown",
                "modal",
                "tab",
                "tabs"
            ]
        }]
    }
}
