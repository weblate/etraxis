{% extends 'base.html.twig' %}

{% set title = 'projects' | trans({}, 'projects') %}

{% block content %}
    <div v-cloak id="vue-projects">
        <div class="columns">
            <div class="column">
                <datatable ref="projects" id="projects" :data="projects" paging clickable icons @icon-click="onIcon" @cell-click="viewProject">
                    <column sortable filterable id="name">{{ 'project.name' | trans({}, 'projects') }}</column>
                    <column sortable id="createdAt">{{ 'project.start_date' | trans({}, 'projects') }}</column>
                    <column sortable filterable id="description" wrappable>{{ 'project.description' | trans({}, 'projects') }}</column>
                    <template #toolbar>
                        <div class="buttons">
                            <button class="button" type="button" title="{{ 'button.create' | trans({}, 'buttons') }}" @click="openNewProjectDialog">
                                <span class="icon"><i class="fa fa-plus"></i></span>
                            </button>
                        </div>
                    </template>
                </datatable>
                <new-project-dialog ref="dlgNewProject" :header="i18n['project.new']" :errors="errors" @submit="createProject"></new-project-dialog>
                <edit-project-dialog ref="dlgEditProject" :header="i18n['project.edit']" :errors="errors" @submit="updateProject"></edit-project-dialog>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('projects/index') }}
{% endblock %}
