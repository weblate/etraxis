{% extends 'base.html.twig' %}

{% set title = user.fullname %}

{% block content %}
    <div v-cloak id="vue-user">
        <div data-id="{{ user.id }}">
            <tabs v-model="tab">
                <tab id="profile" :title="i18n['user.profile']">
                    <profile-tab data-id="{{ app.user.id }}" v-bind="profile" @update:profile="loadProfile"></profile-tab>
                </tab>
            </tabs>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('users/view') }}
{% endblock %}
